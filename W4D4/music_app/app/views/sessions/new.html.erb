<h3>Log In</h3>

<% if flash.now[:error] %>
  <% flash.now[:error].each do |e| %>
    <%= e %>
  <% end %>
<% end %>

<form action="/session" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value=" <%= form_authenticity_token %> ">

    <label> Username
      <input
        type="text"
        name="user[email]"
        value="" />
    </label>
    <br>

    <label>Password
      <input
        type="password"
        name="user[password]"
        value="" />
    </label>
    <br>

    <input type="submit" value="Log In">

</form>
