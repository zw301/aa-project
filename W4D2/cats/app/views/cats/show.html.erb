<h3>Cat's Info</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Birthday</th>
    <th>Age</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @cat.name %> </td>
    <td><%= @cat.birth_date %> </td>
    <td><%= @cat.age %> </td>
    <td><%= @cat.color %> </td>
    <td><%= @cat.sex %> </td>
    <td><%= @cat.description %> </td>
  </tr>
</table>

<%= button_to "Make Kitty Better", edit_cat_url(@cat), method: :get %>
<br>
<%= button_to 'Make Request', cat_rental_requests_url, method: :get %>
<%= link_to 'Take me home', cats_url %>
